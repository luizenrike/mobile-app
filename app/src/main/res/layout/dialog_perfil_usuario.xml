<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style = "@style/container_perfil"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/containerCirculo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/oval_perfil"
        android:src="@drawable/circulo_imagem_perfil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/ic_nome_usuario"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_perfil"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/containerCirculo"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/txt_nome_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/containerCirculo"
        app:layout_constraintStart_toEndOf="@id/ic_nome_usuario"
    />

    <ImageView
        android:id="@+id/ic_email_usuario"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_email_usuario"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/ic_nome_usuario"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/txt_email_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/txt_nome_usuario"
        app:layout_constraintStart_toEndOf="@id/ic_email_usuario"
        />

    <Button
        android:id="@+id/bt_deslogar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_botao_deslogar"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/ic_email_usuario"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>